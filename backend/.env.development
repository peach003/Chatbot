# ========================================
# SmartNZ Travel Planner - Development Environment
# ========================================

NODE_ENV=development

# ========================================
# Application Configuration
# ========================================

BACKEND_PORT=3000
BACKEND_URL=http://localhost:3000
FRONTEND_PORT=3001
FRONTEND_URL=http://localhost:3001

# ========================================
# Database Configuration (Local PostgreSQL)
# ========================================

DATABASE_URL=postgresql://smartnz_user:smartnz2024@localhost:5432/smartnz

# ========================================
# Redis Configuration (Local Redis)
# ========================================

REDIS_URL=redis://localhost:6379

# ========================================
# AI/LLM Provider API Keys (Development)
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL_DEFAULT=gpt-4o-mini
OPENAI_MODEL_MINI=gpt-4o-mini

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_DEFAULT=claude-3-5-sonnet-20241022

# ========================================
# External API Keys (Development - Optional)
# ========================================

GOOGLE_PLACES_API_KEY=
TRIPADVISOR_API_KEY=
KLOOK_API_KEY=
TIQETS_API_KEY=
GETYOURGUIDE_API_KEY=
RENTALCARS_API_KEY=
METSERVICE_API_KEY=
NZTA_API_KEY=

# ========================================
# Security & Session (Development)
# ========================================

JWT_SECRET=dev-jwt-secret-change-in-production
SESSION_SECRET=dev-session-secret-change-in-production
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# ========================================
# Cache Configuration (Development)
# ========================================

CACHE_TTL_DEFAULT=3600
CACHE_TTL_WEATHER=1800
CACHE_TTL_PLACES=86400
CACHE_TTL_PRICES=7200

# ========================================
# Rate Limiting (Development - Relaxed)
# ========================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000
LLM_RATE_LIMIT_TTL=60
LLM_RATE_LIMIT_MAX=100

# ========================================
# Logging (Development)
# ========================================

LOG_LEVEL=debug
LOG_TOKEN_USAGE=true
