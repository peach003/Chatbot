# ========================================
# SmartNZ Travel Planner - Environment Variables Template
# ========================================
# Copy this file to .env and fill in your actual values

# Database Configuration (Local PostgreSQL)
# Replace 'your_password' with the password you set for smartnz_user
DATABASE_URL="postgresql://smartnz_user:your_password@localhost:5432/smartnz"

# Redis Configuration (Local Redis)
REDIS_URL="redis://localhost:6379"

# ========================================
# Application Configuration
# ========================================

NODE_ENV="development"
BACKEND_PORT=3000
BACKEND_URL="http://localhost:3000"
FRONTEND_PORT=3001
FRONTEND_URL="http://localhost:3001"

# ========================================
# AI/LLM Provider API Keys
# ========================================

OPENAI_API_KEY=""
OPENAI_MODEL_DEFAULT="gpt-4o"
OPENAI_MODEL_MINI="gpt-4o-mini"

ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL_DEFAULT="claude-3-5-sonnet-20241022"

# ========================================
# External API Keys
# ========================================

GOOGLE_PLACES_API_KEY=""
TRIPADVISOR_API_KEY=""
KLOOK_API_KEY=""
TIQETS_API_KEY=""
GETYOURGUIDE_API_KEY=""
RENTALCARS_API_KEY=""
METSERVICE_API_KEY=""
NZTA_API_KEY=""

# ========================================
# Security & Session
# ========================================

JWT_SECRET=""
SESSION_SECRET=""
CORS_ORIGINS="http://localhost:3001,http://localhost:3000"

# ========================================
# Cache Configuration
# ========================================

CACHE_TTL_DEFAULT=3600
CACHE_TTL_WEATHER=1800
CACHE_TTL_PLACES=86400
CACHE_TTL_PRICES=7200

# ========================================
# Rate Limiting
# ========================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
LLM_RATE_LIMIT_TTL=60
LLM_RATE_LIMIT_MAX=20

# ========================================
# Logging
# ========================================

LOG_LEVEL="debug"
LOG_TOKEN_USAGE=true
