# ========================================
# SmartNZ Travel Planner - Production Environment
# ========================================

NODE_ENV=production

# ========================================
# Application Configuration
# ========================================

BACKEND_PORT=3000
BACKEND_URL=https://api.smartnz.example.com
FRONTEND_PORT=3001
FRONTEND_URL=https://smartnz.example.com

# ========================================
# Database Configuration (Production)
# ========================================

# IMPORTANT: Set this to your production database URL
# Example formats:
# - Supabase: postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
# - Neon: postgresql://[user]:[password]@[endpoint].neon.tech/[dbname]?sslmode=require
# - Railway: Use DATABASE_URL from Railway environment
DATABASE_URL=

# ========================================
# Redis Configuration (Production)
# ========================================

# IMPORTANT: Set this to your production Redis URL
# Example formats:
# - Upstash: redis://default:[password]@[endpoint].upstash.io:6379
# - Railway: Use REDIS_URL from Railway environment
REDIS_URL=

# ========================================
# AI/LLM Provider API Keys (Production)
# ========================================

# IMPORTANT: Use production API keys
OPENAI_API_KEY=
OPENAI_MODEL_DEFAULT=gpt-4o
OPENAI_MODEL_MINI=gpt-4o-mini

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_DEFAULT=claude-3-5-sonnet-20241022

# ========================================
# External API Keys (Production)
# ========================================

# IMPORTANT: Use production API keys with proper rate limits
GOOGLE_PLACES_API_KEY=
TRIPADVISOR_API_KEY=
KLOOK_API_KEY=
TIQETS_API_KEY=
GETYOURGUIDE_API_KEY=
RENTALCARS_API_KEY=
METSERVICE_API_KEY=
NZTA_API_KEY=

# ========================================
# Security & Session (Production)
# ========================================

# IMPORTANT: Generate strong secrets
# Example: openssl rand -base64 32
JWT_SECRET=
SESSION_SECRET=
CORS_ORIGINS=https://smartnz.example.com

# ========================================
# Cache Configuration (Production)
# ========================================

CACHE_TTL_DEFAULT=3600
CACHE_TTL_WEATHER=1800
CACHE_TTL_PLACES=86400
CACHE_TTL_PRICES=7200

# ========================================
# Rate Limiting (Production - Strict)
# ========================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
LLM_RATE_LIMIT_TTL=60
LLM_RATE_LIMIT_MAX=20

# ========================================
# Logging (Production)
# ========================================

LOG_LEVEL=info
LOG_TOKEN_USAGE=true
