# ========================================
# SmartNZ Travel Planner - Staging Environment
# ========================================

NODE_ENV=staging

# ========================================
# Application Configuration
# ========================================

BACKEND_PORT=3000
BACKEND_URL=https://api-staging.smartnz.example.com
FRONTEND_PORT=3001
FRONTEND_URL=https://staging.smartnz.example.com

# ========================================
# Database Configuration (Staging)
# ========================================

# Use staging database (separate from production)
DATABASE_URL=

# ========================================
# Redis Configuration (Staging)
# ========================================

# Use staging Redis instance
REDIS_URL=

# ========================================
# AI/LLM Provider API Keys (Staging)
# ========================================

# Can use same keys as production but monitor usage separately
OPENAI_API_KEY=
OPENAI_MODEL_DEFAULT=gpt-4o
OPENAI_MODEL_MINI=gpt-4o-mini

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_DEFAULT=claude-3-5-sonnet-20241022

# ========================================
# External API Keys (Staging)
# ========================================

GOOGLE_PLACES_API_KEY=
TRIPADVISOR_API_KEY=
KLOOK_API_KEY=
TIQETS_API_KEY=
GETYOURGUIDE_API_KEY=
RENTALCARS_API_KEY=
METSERVICE_API_KEY=
NZTA_API_KEY=

# ========================================
# Security & Session (Staging)
# ========================================

# Use different secrets than production
JWT_SECRET=staging-jwt-secret
SESSION_SECRET=staging-session-secret
CORS_ORIGINS=https://staging.smartnz.example.com

# ========================================
# Cache Configuration (Staging)
# ========================================

CACHE_TTL_DEFAULT=3600
CACHE_TTL_WEATHER=1800
CACHE_TTL_PLACES=86400
CACHE_TTL_PRICES=7200

# ========================================
# Rate Limiting (Staging - Moderate)
# ========================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=200
LLM_RATE_LIMIT_TTL=60
LLM_RATE_LIMIT_MAX=50

# ========================================
# Logging (Staging)
# ========================================

LOG_LEVEL=debug
LOG_TOKEN_USAGE=true
